<main class="row pb-3">
    <form asp-controller="Home" asp-action="Paciente_edit" class="form-signin align-items-center">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-@ViewBag.Type" align="center">
                <strong>@ViewBag.Message</strong>
            </div>
        }
        <h3 class="h3 mb-3 font-weight-normal">Datos personales del paciente</h3>

        <!-- Button trigger modal -->
        <div class="form-group">
            <button class="btn btn-light btn-outline-secondary btn-lg btn-block pb-2" type="button" data-toggle="modal" data-target="#FamiliaAddEdit">
                Agregar Familiar
            </button>
        </div>

        <input type="hidden" asp-for="Id" class="form-control" placeholder="id" />

        <div class="form-group">
            <label asp-for="Nombre" class="control-label sr-only">Nombre completo</label>
            <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombres" autofocus="" />
        </div>

        <div class="form-group">
            <label asp-for="Apellido" class="control-label sr-only">Apellidos</label>
            <input type="text" asp-for="Apellido" class="form-control" placeholder="Apellidos" />
        </div>

        <div class="form-group">
            <label asp-for="Cedula" class="sr-only">Cedula</label>
            <input type="text" asp-for="Cedula" class="form-control" placeholder="Cedula" />
        </div>

        <div class="form-group">
            <label asp-for="NumeroTelefono" class="sr-only">Telefono</label>
            <input type="text" asp-for="NumeroTelefono" class="form-control" placeholder="Telefono" />
        </div>

        <div class="form-group">
            <label asp-for="Edad" class="sr-only">Edad</label>
            <input type="text" asp-for="Edad" class="form-control" placeholder="Edad" />
        </div>

        <div class="form-group">
            <label asp-for="Genero" class="sr-only">Genero</label>
            @Html.DropDownList("Genero", (IEnumerable<SelectListItem>)ViewBag.listGenero, htmlAttributes: new { @class = "form-control", @type = "text" })
        </div>
        <div class="form-group">
            <label asp-for="IdFamiliar" class="sr-only">Especialidad</label>
            @Html.DropDownList("IdFamiliar", (IEnumerable<SelectListItem>)ViewBag.listFamiliares, htmlAttributes: new { @class = "form-control", @type = "text" })
        </div>

        <div class="form-group">
            <button class="btn btn-secondary btn-lg btn-block" type="submit" value="" asp-controller="Home" asp-action="Paciente">Volver</button>
            <button class="btn btn-light btn-outline-secondary btn-lg btn-block" type="submit" value="" asp-controller="Home" asp-action="Paciente_edit">Editar Paciente</button>
        </div>
    </form>
    <!-- Modal -->
    <div id="FamiliaAddEdit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title h3 mb-3" id="exampleModalLabel">Datos del familiar del paciente</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.PartialAsync("Familiar.cshtml")
                </div>
            </div>
        </div>
    </div>

</main>

